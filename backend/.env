# Flask/Django environment settings
FLASK_APP=app.py                # Flask app entry point (use this if you're using Flask)
FLASK_ENV=development           # Set to 'production' in production environment

# Secret keys and environment configurations
SECRET_KEY=your_random_secret_key_here   # Replace with your secret key for Flask/Django sessions, JWT, etc.
DEBUG=True                       # Set to False in production for security

# Database configuration for MongoDB (since you're using MongoDB)
DATABASE_URL=mongodb://username:password@localhost:27017/taskforge  # Replace with your actual MongoDB URI

# Flask-CORS (Cross-Origin Resource Sharing) configuration
CORS_ORIGIN_WHITELIST=http://localhost:3000  # Allow requests from your frontend (e.g., http://localhost:3000 for dev)

# Flask specific settings
FLASK_RUN_PORT=5000            # Flask server port (default: 5000)
FLASK_RUN_HOST=0.0.0.0         # Allow access from any host (for remote access, change this in production)

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here       # Replace with your Google OAuth Client ID
GOOGLE_CLIENT_SECRET=your_google_client_secret_here  # Replace with your Google OAuth Client Secret

# JWT Authentication Settings
JWT_SECRET_KEY=your_jwt_secret_key_here       # A secret key for JWT signing
JWT_ACCESS_TOKEN_EXPIRES=3600                # JWT access token expiry time (in seconds)

# AWS configuration (if you're using AWS S3 for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_here     # Your AWS Access Key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here # Your AWS Secret Key
AWS_BUCKET_NAME=your_s3_bucket_name_here       # Your S3 Bucket Name

# MongoDB connection options
MONGODB_URI=mongodb://username:password@localhost:27017  # MongoDB URI for connecting to the database (change as needed)

# Environment configurations for production (optional)
PRODUCTION=False               # Change this to True in production
